.container-fluid
  .row
    .col-lg-12
      %h1.page-header
        Admin - Edit Achievement
        %small Safety Harbor CoderDojo
      %ol.breadcrumb
        %li= link_to 'Home', 'http://www.shcoderdojo.org'
        %li= link_to 'Admin', admin_users_path
        %li= link_to 'Achievements', admin_achievements_path
        %li.active= @achievement.name
  .row
    .col-md-12

      = simple_form_for @achievement, url: admin_achievement_path(@achievement) do |f|
        = f.error_notification

        .form-group
          = f.association :topic, collection: Topic.all.order(:sequence)
        .form-group
          = f.association :belt, collection: Belt.all.order(:sequence)
        .form-actions
          = f.button :submit, 'Save'


      = link_to 'Back', admin_achievements_path
