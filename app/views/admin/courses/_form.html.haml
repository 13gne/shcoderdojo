= simple_form_for [:admin, @course] do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :description, input_html: { class: 'editor' }
    = f.input :max_students
    = f.input :minimum_level, collection: Achievement.all.sort_by(&:level)
    = f.input :resources, input_html: { class: 'editor' }
    = f.input :published
    = f.input :current
  .form-actions
    = f.button :submit
