= form_for @belt do |f|
  - if @belt.errors.any?
    #error_explanation
      %h2= "#{pluralize(@belt.errors.count, "error")} prohibited this belt from being saved:"
      %ul
        - @belt.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sequence
    = f.number_field :sequence
  .actions
    = f.submit 'Save'
