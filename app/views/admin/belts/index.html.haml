.container-fluid
  .row
    .col-lg-12
      %h1.page-header
        Admin - Belts
        %small Safety Harbor CoderDojo
      %ol.breadcrumb
        %li= link_to 'Home', 'http://www.shcoderdojo.org'
        %li= link_to 'Admin', admin_users_path
        %li.active Belts
  .row
    .col-md-12

      %table.table.table-striped
        %thead
          %tr
            %th Name
            %th Sequence
            %th
            %th

        %tbody
          - @belts.each do |belt|
            %tr
              %td= belt.name
              %td= belt.sequence
              %td= link_to 'Edit', edit_admin_belt_path(belt)
              %td= link_to 'Destroy', admin_belt_path(belt), :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br

      = link_to 'New Belt', new_admin_belt_path
