/ Page Content
.container
  / Page Heading/Breadcrumbs
  .row
    .col-lg-12
      %h1.page-header
        Course Registrations
        %small Safety Harbor CoderDojo
      %ol.breadcrumb
        %li= link_to 'Home', root_path
        %li= link_to 'Courses', courses_path
        %li.active Registrations
  / /.row
  / Intro Content
  .row
    .col-md-12
      %table.table.table-fixed
        %thead
          %tr
            %th Student
            %th Course
            %th{:colspan => "3"}
        %tbody
          - @course_registrations.each do |course_registration|
            %tr
              %td= course_registration.user.name
              %td= link_to course_registration.course.name, course_path(course_registration.course)
              %td= link_to 'Unregister', course_registration, method: :delete, data: { confirm: 'Are you sure?' }
  / /.row
/ /.container
%br/
