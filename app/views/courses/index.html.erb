<!-- Page Content -->
<div class="container">

  <!-- Page Heading/Breadcrumbs -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Sessions
        <small>Safety Harbor CoderDojo</small>
      </h1>
      <ol class="breadcrumb">
        <li><%= link_to 'Home', root_path %>
        </li>
        <li class="active">Sessions</li>
      </ol>
    </div>
  </div>
  <!-- /.row -->

  <!-- Intro Content -->
  <div class="row">
    <div class="col-md-12">

      <table class="table table-fixed">
        <thead>
          <tr>
            <th>Name</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Description</th>
            <th>&nbsp;</th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= link_to course.name, course_path(course.id) %></td>
              <td><%= course.start_date.strftime("%-m/%-e/%Y") %></td>
              <td><%= course.end_date.strftime("%-m/%-e/%Y") %></td>
              <td><%= course.description %></td>
              <td>
                <% if user_signed_in? %>
                  <% if current_user.course_registered(course.id) %>
                    Already Registered
                  <% else %>
                    <%= link_to "Register for this course", new_course_registration_path(course_id: course.id) %>
                  <% end %>
                <% else %>
                  <%= link_to "Create an account to register", new_user_registration_path %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
  <!-- /.row -->



</div>
<!-- /.container -->




<br>
