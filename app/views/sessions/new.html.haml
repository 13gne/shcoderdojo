.container
  .row
    .col-lg-12
      %h1.page-header
        New Course Session (Admin Only)
        %small Safety Harbor CoderDojo
      %ol.breadcrumb
        %li= link_to 'Home', root_path
        %li= link_to 'Courses', courses_path
        %li= link_to @course.name, course_path(@course)
        %li.active Create New Session
  .row
    .col-md-12
      .well
        = simple_form_for @session, url: course_sessions_path do |f|
          = f.error_notification
          .form-inputs
            = f.input :course_id, as: :hidden
            = f.input :session_date, input_html: { class: 'flatpickr' }, as: :string
            = f.input :notes, input_html: { class: 'editor' }
          .form-actions
            = f.button :submit, input_html: { class: 'btn-block'}
